<?xml version="1.0" encoding="utf-8" ?>
<Patch>

    <!-- Move mods research to hidden tab -->

    <Operation Class="PatchOperationReplace">
        <xpath>
            Defs/ResearchProjectDef[
                   defName = "ResearchDrillTurret"
                or defName = "ResearchDrillTurretEfficientDrilling"
            ]/tab
        </xpath>
        <value>
            <tab>DuneRef_Hidden</tab>
        </value>
    </Operation>

    <!-- remove prerequisites so no funky stuff happens when we try to unlock them automatically -->

    <Operation Class="PatchOperationRemove">
        <xpath>
            Defs/ResearchProjectDef[
                   defName = "ResearchDrillTurret"
                or defName = "ResearchDrillTurretEfficientDrilling"
            ]/prerequisites
        </xpath>
    </Operation>

    <!-- Add techs to RimCivTechTree researches -->

    <Operation Class="PatchOperationAdd">
        <xpath>
            Defs/ResearchProjectDef[
                   defName = "DuneRef_Lasers"
            ]/modExtensions/li[@Class="DuneRef_CustomTechTreeFramework.ResearchUnlocks"]/researchUnlocks
        </xpath>
        <value>
            <li>ResearchDrillTurret</li>
            <li>ResearchDrillTurretEfficientDrilling</li>
        </value>
    </Operation>

    <!-- Hide tabs created by this mod -->

    <!-- Special conditional tab edit since all their techs in various mods are in the same tab -->
    <Operation Class="PatchOperationConditional">
        <xpath>Defs/ResearchTabDef[defName="MiningCo"]/modExtensions</xpath>
        <match Class="PatchOperationConditional">
            <xpath>Defs/ResearchTabDef[defName="MiningCo"]/modExtensions/li[@Class="DuneRef_CustomTechTreeFramework.HiddenTab"]</xpath>
            <nomatch Class="PatchOperationAdd">
                <xpath>Defs/ResearchTabDef[defName="MiningCo"]/modExtensions</xpath>
                <value>
                    <li Class="DuneRef_CustomTechTreeFramework.HiddenTab">
                        <hidden>True</hidden>
                    </li>
                </value>
            </nomatch>
        </match>
        <nomatch Class="PatchOperationAdd">
            <xpath>Defs/ResearchTabDef[defName="MiningCo"]</xpath>
            <value>
                <modExtensions>
                    <li Class="DuneRef_CustomTechTreeFramework.HiddenTab">
                        <hidden>True</hidden>
                    </li>
                </modExtensions>
            </value>
        </nomatch>
    </Operation>

</Patch>