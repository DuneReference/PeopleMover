<?xml version="1.0" encoding="utf-8" ?>
<Patch>

    <!-- Move mods research to hidden tab -->

    <Operation Class="PatchOperationAdd">
        <xpath>
            Defs/ResearchProjectDef[
                   defName = "AutoDrill_Research_Basic"
                or defName = "AutoDrill_Research_Giant"
                or defName = "AutoDrill_Research_Smart"
            ]
        </xpath>
        <value>
            <tab>DuneRef_Hidden</tab>
        </value>
    </Operation>

    <!-- remove prerequisites so no funky stuff happens when we try to unlock them automatically -->

    <Operation Class="PatchOperationRemove">
        <xpath>
            Defs/ResearchProjectDef[
                   defName = "AutoDrill_Research_Basic"
                or defName = "AutoDrill_Research_Giant"
                or defName = "AutoDrill_Research_Smart"
            ]/prerequisites
        </xpath>
    </Operation>

    <!-- Add techs to RimCivTechTree researches -->

    <Operation Class="PatchOperationAdd">
        <xpath>
            Defs/ResearchProjectDef[
                   defName = "DuneRef_Lasers"
            ]/modExtensions/li[@Class="DuneRef_CustomTechTreeFramework.ResearchUnlocks"]/researchUnlocks
        </xpath>
        <value>
            <li>AutoDrill_Research_Basic</li>
        </value>
    </Operation>

    <Operation Class="PatchOperationAdd">
        <xpath>
            Defs/ResearchProjectDef[
                   defName = "DuneRef_AdvancedAI"
            ]/modExtensions/li[@Class="DuneRef_CustomTechTreeFramework.ResearchUnlocks"]/researchUnlocks
        </xpath>
        <value>
            <li>AutoDrill_Research_Giant</li>
            <li>AutoDrill_Research_Smart</li>
        </value>
    </Operation>

</Patch>