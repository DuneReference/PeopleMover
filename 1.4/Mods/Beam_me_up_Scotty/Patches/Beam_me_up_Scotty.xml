<?xml version="1.0" encoding="utf-8" ?>
<Patch>

    <!-- Move mods research to hidden tab -->

    <Operation Class="PatchOperationReplace">
        <xpath>
            Defs/ResearchProjectDef[
                   defName = "LTF_Research_TpSpot"
                or defName = "LTF_Research_TpBench"
            ]/tab
        </xpath>
        <value>
            <tab>DuneRef_Hidden</tab>
        </value>
    </Operation>

    <!-- remove prerequisites so no funky stuff happens when we try to unlock them automatically -->

    <Operation Class="PatchOperationRemove">
        <xpath>
            Defs/ResearchProjectDef[
                   defName = "LTF_Research_TpSpot"
                or defName = "LTF_Research_TpBench"
            ]/prerequisites
        </xpath>
    </Operation>

    <!-- Add techs to RimCivTechTree researches -->

    <Operation Class="PatchOperationAdd">
        <xpath>
            Defs/ResearchProjectDef[
                   defName = "DuneRef_QuantumIndustry"
            ]/modExtensions/li[@Class="DuneRef_CustomTechTreeFramework.ResearchUnlocks"]/researchUnlocks
        </xpath>
        <value>
            <li>LTF_Research_TpSpot</li>
            <li>LTF_Research_TpBench</li>
        </value>
    </Operation>

    <!-- Hide tabs created by this mod -->

    <Operation Class="PatchOperationAdd">
        <xpath>
            Defs/ResearchTabDef[defName = "LTFTeleporter"]
        </xpath>
        <value>
            <modExtensions>
                <li Class="DuneRef_CustomTechTreeFramework.HiddenTab">
                    <hidden>True</hidden>
                </li>
            </modExtensions>
        </value>
    </Operation>

</Patch>