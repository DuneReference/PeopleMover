    <!-- Hide tabs created by this mod -->

    <Operation Class="PatchOperationAdd">
        <xpath>
            Defs/ResearchTabDef[defName = "Automation"]
        </xpath>
        <value>
            <modExtensions>
                <li Class="DuneRef_CustomTechTreeFramework.HiddenTab">
                    <hidden>True</hidden>
                </li>
            </modExtensions>
        </value>
    </Operation>

