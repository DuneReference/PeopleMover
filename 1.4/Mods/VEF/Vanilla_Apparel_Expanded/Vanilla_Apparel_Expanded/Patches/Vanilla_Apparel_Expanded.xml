<?xml version="1.0" encoding="utf-8" ?>
<Patch>

    <!-- Move mods research to hidden tab -->

    <Operation Class="PatchOperationReplace">
        <xpath>
            Defs/ResearchProjectDef[
                   defName = "VAE_CasualWear"
                or defName = "VAE_FormalWear"
                or defName = "VAE_WorkAttire"
                or defName = "VAE_SterileAttire"
                or defName = "VAE_MilitaryClothing"
            ]/tab
        </xpath>
        <value>
            <tab>DuneRef_Hidden</tab>
        </value>
    </Operation>

    <!-- remove prerequisites so no funky stuff happens when we try to unlock them automatically -->

    <Operation Class="PatchOperationRemove">
        <xpath>
            Defs/ResearchProjectDef[
                   defName = "VAE_CasualWear"
                or defName = "VAE_FormalWear"
                or defName = "VAE_WorkAttire"
                or defName = "VAE_SterileAttire"
                or defName = "VAE_MilitaryClothing"
            ]/prerequisites
        </xpath>
    </Operation>

    <!-- Add techs to RimCivTechTree researches -->

    <Operation Class="PatchOperationAdd">
        <xpath>
            Defs/ResearchProjectDef[
                   defName = "DuneRef_Industrialization"
            ]/modExtensions/li[@Class="DuneRef_CustomTechTreeFramework.ResearchUnlocks"]/researchUnlocks
        </xpath>
        <value>
            <li>VAE_CasualWear</li> 
            <li>VAE_FormalWear</li> 
            <li>VAE_WorkAttire</li> 
        </value>
    </Operation>

    <Operation Class="PatchOperationAdd">
        <xpath>
            Defs/ResearchProjectDef[
                   defName = "DuneRef_Sanitation"
            ]/modExtensions/li[@Class="DuneRef_CustomTechTreeFramework.ResearchUnlocks"]/researchUnlocks
        </xpath>
        <value>
            <li>VAE_SterileAttire</li>
        </value>
    </Operation>

    <Operation Class="PatchOperationAdd">
        <xpath>
            Defs/ResearchProjectDef[
                   defName = "DuneRef_ReplaceableParts"
            ]/modExtensions/li[@Class="DuneRef_CustomTechTreeFramework.ResearchUnlocks"]/researchUnlocks
        </xpath>
        <value>
            <li>VAE_MilitaryClothing</li>
        </value>
    </Operation>

    <!-- Hide tabs created by this mod -->

    <!-- Special conditional tab edit since all their techs in various mods are in the same tab -->
    <Operation Class="PatchOperationConditional">
        <xpath>Defs/ResearchTabDef[defName="VanillaExpanded"]/modExtensions</xpath>
        <match Class="PatchOperationConditional">
            <xpath>Defs/ResearchTabDef[defName="VanillaExpanded"]/modExtensions/li[@Class="DuneRef_CustomTechTreeFramework.HiddenTab"]</xpath>
            <nomatch Class="PatchOperationAdd">
                <xpath>Defs/ResearchTabDef[defName="VanillaExpanded"]/modExtensions</xpath>
                <value>
                    <li Class="DuneRef_CustomTechTreeFramework.HiddenTab">
                        <hidden>True</hidden>
                    </li>
                </value>
            </nomatch>
        </match>
        <nomatch Class="PatchOperationAdd">
            <xpath>Defs/ResearchTabDef[defName="VanillaExpanded"]</xpath>
            <value>
                <modExtensions>
                    <li Class="DuneRef_CustomTechTreeFramework.HiddenTab">
                        <hidden>True</hidden>
                    </li>
                </modExtensions>
            </value>
        </nomatch>
    </Operation>

    <!-- Moving Individual items to different techs -->

    <Operation Class="PatchOperationReplace">
        <xpath>
            Defs/ThingDef[
                   defName = "VAE_Apparel_Blouse"
                or defName = "VAE_Headgear_SummerHat"
                or defName = "VAE_Apparel_Tunic"
            ]/recipeMaker/researchPrerequisite
        </xpath>
        <value>
            <researchPrerequisites Inherit="False">
                <li>DuneRef_Clothworking</li>
            </researchPrerequisites>
        </value>
    </Operation>

    <Operation Class="PatchOperationReplace">
        <xpath>
            Defs/ThingDef[
                   defName = "VAE_Headgear_Glasses"
                or defName = "VAE_Apparel_LabCoat"
            ]/recipeMaker/researchPrerequisite
        </xpath>
        <value>
            <researchPrerequisites Inherit="False">
                <li>DuneRef_ScientificTheory</li>
            </researchPrerequisites>
        </value>
    </Operation>

</Patch>